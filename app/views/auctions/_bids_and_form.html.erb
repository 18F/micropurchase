<div class="usa-width-one-third current-bid-box">
  <div class="current-bid-box-children">
  <%= render partial: auction.info_box_partial, locals: {auction: auction} %>
</div>
</div>

<div class="usa-width-one-third bid-deadline-box">
  <div class="bid-deadline-box-children">
  <span class="bid-deadline">
    Bid Deadline:  <%= distance_of_time_in_words(Time.now, auction.end_datetime) %> left
  </span><br/>
  <span class="bid-deadline">
    Bid start time: <%= auction.human_start_time %>
  </span>
</div>
</div>
