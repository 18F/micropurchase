<% if auction.available? %>
  <% if auction.bids.any? %>
    <% if auction.user_is_bidder? %>
      <span class="issue-current-bid">Your bid:
        <span class="issue-winning-bid"><%=
        link_to(
          auction.user_bid_amount_as_currency,
          auction_bids_path(auction.id)
        )
        %>
        </span>
      </span>
    <% end %>
  <% end %>
<% elsif auction.over? %>
  <% if auction.bids.any? %>
    <span class="issue-current-bid <% unless auction.user_is_winning_bidder? %>issue-current-bid-long<% end %>">
      <% if auction.user_is_winning_bidder? %>
        <span>Your bid won: </span>
      <% else %>
        <% if auction.user_is_bidder? %>
          <span class="issue-current-bid issue-current-bid-new-line">Your bid: <%= auction.user_bid_amount_as_currency %></span>
        <% end %>
        <span class="issue-current-bid">Winning bid:</span>
      <% end %>
      <span class="issue-winning-bid"><%=
        link_to(
          auction.highlighted_bid_amount_as_currency,
          auction_bids_path(auction.id)
        )
        %>
      </span>
    </span>
  <% end %>
<% end %>
