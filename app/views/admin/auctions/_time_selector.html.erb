<div>
<select class="time-input" name="auction[<%=field%>_at(1i)]">
  <%= options_for_select((1..12).to_a, @auction.hour_default(field)) %>
  </select>
  <select class="time-input" name="auction[<%=field%>_at(2i)]">
    <%= options_for_select(['00', '15', '30', '45'], @auction.minute_default(field)) %>
  </select>
  <select class="time-input" name="auction[<%=field%>_at(3i)]">
    <%= options_for_select(['AM', 'PM'], @auction.meridien_default(field)) %>
  </select>
</div>
