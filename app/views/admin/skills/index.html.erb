<h2>Settings</h2>

<nav class="site-nav-secondary">
<ul>
  <li><%= link_to 'Customers', admin_customers_path %></li>
  <li><%= link_to 'Skills', admin_skills_path, class: 'usa-current' %></li>
  <li class='new-button'>
    <%= link_to 'Add skill',
      new_admin_skill_path,
      class: 'settings-new usa-button usa-button-outline' %>
  </li>
</ul>
</nav>

<table class="usa-table-borderless">
  <thead>
    <tr>
      <th scope="col">Skill name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @view_model.skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= link_to('Edit', edit_admin_skill_path(skill)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
