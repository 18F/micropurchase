<h1>Bidding on...</h1>

<div class="table-container">
  <table class="usa-table-borderless table-open-issue-list make-bid-table">
    <tbody>

      <%= render partial: 'bid_row_cell' %>

    </tbody>
  </table>
</div>

<div class="usa-grid make-bid-grid">
  <div class="usa-width-one-half">
    <h2>Current bid:</h2>
    <p class="current-bid-amount">$1,000.50</p>
  </div>

  <div class="usa-width-one-half">
    <label for="your-bid-amount"><h2>Your bid:</h2></label>
    <p>
      <input id="your-bid-amount" name="your-bid-amount" type="text">
    </p>
  </div>
</div>

