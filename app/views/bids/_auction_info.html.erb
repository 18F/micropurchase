<div class='usa-width-one-whole issue-list-item'>
  <h1 class='issue-title'><%= auction.title %></h1>
  <p class='issue-description'>
    <%=h raw auction.html_description %>
  </p>
  <% if AuctionStatus.new(auction).available? %>
    <h3>Ends in <%= auction.relative_time_left %></h3>
  <% end %>
</div>
