<h2 id="methods">Methods</h2>

<% @swagger.paths.each do |path| %>
  <% path.operations.each do |op| %>
    <h3 id="<%= op.unique_key %>"><%= op.verb.upcase %> <%= path.path %></h3>

    <p><%= op.html_description %></p>

    <% if op.sample_json_response? %>
<p>Example response:</p>

<pre><code>
<%= op.sample_json_response %>
</code></pre>
<% end %>

    <table class="usa-table-borderless">
      <thead>
        <tr>
          <th>Code</th>
          <th>Meaning</th>
          <th>Return Type</th>
        </tr>
      </thead>
      <tbody>
        <% op.responses.each do |response| %>
        <tr>
          <td><%= response.code %></td>
          <td><%= response.inline_html_description %></td>
          <td><%= response.displayed_type %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <% end %>
<% end %>
